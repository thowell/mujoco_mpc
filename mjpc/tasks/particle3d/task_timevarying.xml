<mujoco model="Particle3d Control">
  <include file="../common.xml"/>
  <include file="particle.xml" />

  <size memory="10K"/>

  <custom>
    <!-- agent -->
    <numeric name="task_risk" data="0" />
    <numeric name="agent_planner" data="6" />
    <numeric name="agent_horizon" data="0.25" />
    <numeric name="agent_timestep" data="0.01" />
    <numeric name="agent_policy_width" data="0.0015" />
    <numeric name="sampling_spline_points" data="5" />
    <numeric name="sampling_exploration" data="0.01" />
    <numeric name="gradient_spline_points" data="5" />

    <!-- direct -->
    <numeric name="direct_sensor_start" data="0"/>
    <numeric name="direct_number_sensor" data="3"/>
    <numeric name="direct_force_weight" data="1.0 1.0 1.0"/>
  </custom>

  <sensor>
    <!-- cost -->
    <user name="Position" dim="3" user="0 5.0 0.0 10.0" />
    <user name="Velocity" dim="3" user="0 0.1 0.0 1.0" />
    <user name="Control" dim="3" user="0 0.1 0.0 1.0" />

    <!-- trace -->
    <framepos name="trace0" objtype="site" objname="tip"/>

    <!-- residual -->
    <framepos name="position" objtype="site" objname="tip"/>
    <framelinvel name="velocity" objtype="site" objname="tip"/>
  </sensor>
</mujoco>
