<mujoco model="Planar Reach">
  <include file="../common.xml"/>
  <include file="planar_reach.xml" />

  <size memory="4K"/>

  <custom>
    <!-- planner -->
    <numeric name="agent_planner" data="0" />
    <numeric name="agent_horizon" data="2.0" />
    <numeric name="agent_timestep" data="0.01" />
    <numeric name="sampling_sample_width" data="0.01" />
    <numeric name="sampling_control_width" data="0.015" />
    <numeric name="sampling_spline_points" data="10" />
    <numeric name="sampling_exploration" data="0.05" />
    <numeric name="gradient_spline_points" data="10" />
    <numeric name="residual_Goal X" data="1 -1 1" />
    <numeric name="residual_Goal Z" data="3 -1 4" />

    <!-- estimator -->
    <numeric name="estimator_sensor_start" data="3" />
    <numeric name="estimator_number_sensor" data="4" />
  </custom>

  <sensor>
    <!-- cost -->
    <user name="Distance" dim="2" user="0 50.0 0 100.0"/>
    <user name="Velocity" dim="2" user="0  1.0 0 10.0"/>
    <user name="Control" dim="2" user="0 0.05 0.0 1.0"/>

    <!-- estimator sensors -->
    <framepos name="elbow_site" objtype="site" objname="elbow_site"/>
    <framepos name="tip_site" objtype="site" objname="tip_site"/>
    <framepos name="ball_site1" objtype="site" objname="ball_site1"/>
    <framepos name="ball_site2" objtype="site" objname="ball_site2"/>

    <!-- trace -->
    <framepos name="trace0" objtype="site" objname="tip"/>

    <!-- residual -->
    <framepos name="position" objtype="site" objname="tip"/>
    <framelinvel name="velocity" objtype="site" objname="tip"/>
  </sensor>
</mujoco>
