<mujoco model="planar_reach">
  <default>
    <joint damping=".05"/>
    <geom type="capsule" mass="1"/>
  </default>

  <option timestep="0.01" gravity="0 0 0">
    <flag constraint="disable" energy="enable"/>
  </option>

  <visual>
    <global offwidth="1920" offheight="1080"/>
  </visual>>

  <worldbody>
    <light name="light" pos="0 0 6"/>
    <geom name="floor" size="3 3 .2" type="plane" material="blue_grid"/>
    <site name="target" type="sphere" pos="0 0 4" size="0.2" material="target" group="3"/>
    <camera name="fixed" pos="0 -6 2" zaxis="0 -1 0"/>
    <camera name="lookat" mode="targetbodycom" target="upper_arm" pos="0 -2 3"/>
    <!-- ball -->
    <body name="ball" pos="-.125 0 .1">
      <joint name="ball_x" type="slide" axis="1 0 0" ref="0"/>
      <joint name="ball_z" type="slide" axis="0 0 1" ref=".1"/>
      <geom  name="ball_geom" type="sphere" size=".1" material="self"/>
      <site  name="ball_site1" type="sphere" rgba="1 0 1 1" size="0.025" pos="0 -0.1 0.01"  />
      <site  name="ball_site2" type="sphere" rgba="1 0 1 1" size="0.025" pos="0 -0.1 -0.01"  />
    </body>
    <!-- arm -->
    <body name="upper_arm" pos="0 0 2">
      <joint name="shoulder" type="hinge" axis="0 1 0"/>
      <geom name="upper_arm_decoration" material="decoration" type="cylinder" fromto="0 -.06 0 0 .06 0" size="0.051" mass="0"/>
      <geom name="upper_arm" fromto="0 0 0 0 0 1" size="0.05" material="self"/>
      <site name="elbow_site" pos="0 -0.025 1.0" rgba="1 0 1 1" type="sphere" size="0.04"/>
      <body name="lower_arm" pos="0 0 1">
        <joint name="elbow" type="hinge" axis="0 1 0"/>
        <geom name="lower_arm" fromto="0 0 0 0 0 1" size="0.049" material="self"/>
        <site name="tip" pos="0 0 1" size="0.01"/>
        <site name="tip_site" pos="0 -0.025 1.0" rgba="1 0 1 1" type="sphere" size="0.04"/>
      </body>
    </body>

    <body name="mocap_elbow" mocap="true">
      <geom type="sphere" size="0.03" rgba="0 1 1 1" contype="0" conaffinity="0"/>
    </body>
    <body name="mocap_tip" mocap="true">
      <geom type="sphere" size="0.03" rgba="0 1 1 1" contype="0" conaffinity="0"/>
    </body>
    <body name="mocap_ball1" mocap="true">
      <geom type="sphere" size="0.03" rgba="0 1 1 1" contype="0" conaffinity="0"/>
    </body>
    <body name="mocap_ball2" mocap="true">
      <geom type="sphere" size="0.03" rgba="0 1 1 1" contype="0" conaffinity="0"/>
    </body>
  </worldbody>

   <actuator>
    <motor name="shoulder" joint="shoulder" gear="2" ctrllimited="true" ctrlrange="-1 1"/>
    <motor name="elbow" joint="elbow" gear="2" ctrllimited="true" ctrlrange="-1 1"/>
  </actuator>
</mujoco>
